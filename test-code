import unittest
import json

# Предполагаемая функция, которую нужно протестировать
def add_two_numbers(a, b):
    """
    Функция для сложения двух чисел.
    Ожидает на вход два числа (int или float), иначе поднимает ValueError.
    """
    if not (isinstance(a, (int, float)) and isinstance(b, (int, float))):
        raise ValueError("Оба аргумента должны быть числами (int или float)")
    return a + b

class TestAddTwoNumbers(unittest.TestCase):
    
    @classmethod
    def setUpClass(cls):
        # Загрузка входных данных из конфигурационного файла
        with open('test_data.json', 'r') as f:
            cls.test_data = json.load(f)

    def test_positive_integers(self):
        # Тест на положительные целые числа из конфига
        for data in self.test_data['positive_integers']:
            self.assertEqual(add_two_numbers(data['a'], data['b']), data['expected'])

    def test_negative_integers(self):
        # Тест на отрицательные целые числа из конфига
        for data in self.test_data['negative_integers']:
            self.assertEqual(add_two_numbers(data['a'], data['b']), data['expected'])

    def test_floats(self):
        # Тест на дробные числа из конфига
        for data in self.test_data['floats']:
            self.assertAlmostEqual(add_two_numbers(data['a'], data['b']), data['expected'], places=7)

    def test_zero(self):
        # Тест с нулевыми значениями из конфига
        for data in self.test_data['zero']:
            self.assertEqual(add_two_numbers(data['a'], data['b']), data['expected'])

    def test_boundary_cases(self):
        # Граничные случаи из конфига
        for data in self.test_data['boundary_cases']:
            self.assertEqual(add_two_numbers(data['a'], data['b']), data['expected'])

    def test_invalid_data(self):
        # Некорректные данные из конфига
        for data in self.test_data['invalid_data']:
            with self.assertRaises(ValueError):
                add_two_numbers(data['a'], data['b'])

if __name__ == '__main__':
    unittest.main()
